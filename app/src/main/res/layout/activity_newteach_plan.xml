<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backLine"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.weiaibenpao.demo.chislim.ui.TravelInfoActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <View
            android:id="@+id/myBar"
            android:layout_width="match_parent"
            android:alpha="0"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"/>
    </RelativeLayout>

        <LinearLayout
            android:id="@+id/mtTeach"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/myTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/bgImage"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/title"
                        android:textColor="@color/backWord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="26sp"
                        android:text="燃脂"/>
                    <TextView
                        android:id="@+id/userHad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/backWord"
                        android:layout_alignBottom="@+id/bgImage"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="25dp"
                        android:layout_gravity="center_horizontal"
                        android:text="4节"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/myLinLayout"
                android:background="@color/backWord"
                android:clickable="true"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/backGround"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动作列表"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5个动作  >"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/teachList"
                android:background="@color/backWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/myWord"
        android:layout_below="@+id/mtTeach"
        android:background="@color/backWord"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/introTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="18sp"
            android:text="燃脂肪"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backLine"/>
        <TextView
            android:id="@+id/intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>
</ScrollView>
<RelativeLayout
android:id="@+id/startTeach"
android:clickable="true"
android:background="@color/backThem"
android:layout_alignParentBottom="true"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:text="开始运动"/>

<ImageView
    android:layout_alignParentRight="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_centerVertical="true"
    android:src="@mipmap/ic_launcher"
    android:id="@+id/imageView" />
</RelativeLayout>
</RelativeLayout>