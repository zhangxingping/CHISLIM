<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_perfect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj1"
    tools:context="com.weiaibenpao.demo.chislim.ui.PerfectActivity">

    <!--出生年月-->
    <RelativeLayout
        android:id="@+id/myBirth"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textSize="26sp"
            android:textColor="@color/backThem"
            android:text="日期选择"/>
        <DatePicker
             android:id="@+id/datePicker"
             style="@style/datePickerTheme"
             android:calendarViewShown="false"
             android:layout_centerInParent="true"
             android:background="@color/backGround"
             android:headerBackground="@color/backThem"
             android:calendarTextColor="@color/backThem"
             android:yearListSelectorColor="@color/backThem"
             android:yearListItemTextAppearance="@color/backThem"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal" />
        <!-- android:datePickerMode="spinner"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/datebut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@drawable/carinfobutton"
                android:textColor="@color/backWord"
                android:textSize="18sp"
                android:text="完成"/>
        </LinearLayout>
    </RelativeLayout>

    <!--体重选择-->
    <RelativeLayout
        android:id="@+id/myWeight"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textColor="@color/backThem"
                android:text="体重选择"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/myWeightText"
                    android:textSize="26sp"
                    android:textColor="@color/backThem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="55"/>
                <TextView
                    android:textSize="26sp"
                    android:textColor="@color/backThem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/menWeight"
            android:layout_marginBottom="15dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/people"/>

        <com.lichfaker.scaleview.HorizontalScaleScrollView
            android:id="@+id/horizontalScale"
            android:layout_below="@+id/menWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_view_max="200"
            app:scale_view_min="10"
            app:scale_view_height="8dip"
            app:scale_view_margin="5dip"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/weightUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@drawable/carinfobutton"
                android:textColor="@color/backWord"
                android:textSize="18sp"
                android:text="上一步"/>
            <Button
                android:id="@+id/weightNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@drawable/carinfobutton"
                android:textColor="@color/backWord"
                android:textSize="18sp"
                android:text="下一步"/>

        </LinearLayout>
    </RelativeLayout>

    <!--身高选择-->
    <RelativeLayout
        android:id="@+id/myHeight"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textColor="@color/backThem"
                android:text="身高选择"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/myHeightText"
                    android:textSize="26sp"
                    android:textColor="@color/backThem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="55"/>
                <TextView
                    android:textSize="26sp"
                    android:textColor="@color/backThem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="厘米"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/menImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/men"/>

        <com.lichfaker.scaleview.VerticalScaleScrollView
            android:id="@+id/verticalScale"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:scale_view_max="200"
            app:scale_view_min="10"
            app:scale_view_height="8dip"
            app:scale_view_margin="5dip"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:alpha="0.1"
            android:background="@drawable/bj1"
            android:layout_below="@+id/menImage"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/heightUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@drawable/carinfobutton"
                android:textColor="@color/backWord"
                android:textSize="18sp"
                android:text="上一步"/>
            <Button
                android:id="@+id/heightNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@drawable/carinfobutton"
                android:textColor="@color/backWord"
                android:textSize="18sp"
                android:text="下一步"/>

        </LinearLayout>
    </RelativeLayout>

    <!--性别选择-->
    <RelativeLayout
        android:id="@+id/mySex"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textColor="@color/backThem"
                android:text="性别选择"/>
            <TextView
                android:id="@+id/mySexText"
                android:textSize="26sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/backThem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"/>
        </LinearLayout>

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/boy"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:src="@mipmap/man"/>
            <ImageView
                android:id="@+id/girl"
                android:clickable="true"
                android:alpha="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:src="@mipmap/girl"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/sexUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@drawable/carinfobutton"
                android:textColor="@color/backWord"
                android:textSize="18sp"
                android:text="上一步"/>
            <Button
                android:id="@+id/sexNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@drawable/carinfobutton"
                android:textColor="@color/backWord"
                android:textSize="18sp"
                android:text="下一步"/>

        </LinearLayout>
    </RelativeLayout>

    <!--填写昵称-->
    <RelativeLayout
        android:id="@+id/myName"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/backThem"
            android:textSize="26sp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:text="填写昵称"/>
        <ImageView
            android:id="@+id/myImageUser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/girl"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/myImageUser"
            android:orientation="vertical">
            <EditText
                android:id="@+id/userNameText"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:textColor="@color/backThem"
                android:textColorHint="@color/backWord"
                android:hint="请输入昵称"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/backThem"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myContru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
<!--            <Button
                android:id="@+id/nameUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@drawable/carinfobutton"
                android:textColor="@color/backThem"
                android:textSize="18sp"
                android:text="上一步"/>-->
            <Button
                android:id="@+id/nameNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:alpha="1"
                android:background="@drawable/carinfobutton"
                android:textColor="@color/backWord"
                android:textSize="18sp"
                android:text="下一步"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
